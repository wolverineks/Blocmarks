<h1>Password Reset</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_tag ('/password_reset') do %>

      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email, '', class: 'form-control', placeholder: "Enter email address" %>
      </div>

      <div class="form-group">
        <%= submit_tag "Submit", class: 'btn btn-success', data: { disable_with: 'Submitting...' } %>
      </div>

    <% end %>
    
  </div>
</div>
